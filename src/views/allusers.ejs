<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users - Rohit App</title>

    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-screen bg-gray-900 text-gray-200 flex items-center justify-center px-4">

    <!-- MAIN CARD -->
    <div class="w-full max-w-4xl bg-gray-800 rounded-xl shadow-2xl p-6">

      <!-- HEADER -->
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-white">All Users</h2>
        <a
          href="/"
          class="text-sm text-blue-400 hover:text-blue-300 transition"
        >
          ‚Üê Back to Register
        </a>
      </div>

      <!-- TABLE -->
      <div class="overflow-x-auto rounded-lg border border-gray-700">
        <table class="w-full text-sm text-left">
          <thead class="bg-gray-700 text-gray-300 uppercase text-xs">
            <tr>
              <th class="px-6 py-3">Name</th>
              <th class="px-6 py-3">Email</th>
              <th class="px-6 py-3 text-center">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% users.forEach(user => { %>
              <tr class="border-b border-gray-700 hover:bg-gray-700/50 transition">
                <td class="px-6 py-4 font-medium text-white">
                  <%= user.name %>
                </td>
                <td class="px-6 py-4 text-gray-300">
                  <%= user.email %>
                </td>
                <td class="px-6 py-4 text-center">
                  <a
                    href="/user/delete/<%= user._id %>"
                    onclick="return confirm('Are you sure?')"
                    class="inline-flex items-center gap-1 text-red-400 hover:text-red-300 transition"
                  >
                    üóë Delete
                  </a>
                  <a
                    href="/user/edit/<%= user._id %>"
                    onclick="return confirm('Are you sure?')"
                    class="inline-flex items-center gap-1 text-blue-400 hover:text-blue-300 transition"
                  >
                    ‚úèÔ∏è Edit
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- EMPTY STATE -->
      <% if (users.length === 0) { %>
        <p class="text-center text-gray-400 py-6">
          No users found.
        </p>
      <% } %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>
